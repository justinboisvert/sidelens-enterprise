<html>
<head>
<title>Sidelens</title>
<script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link rel='stylesheet' href='home.css'/>
</head>
<script>
 $(document).ready(function(){
   $('div[name=login_btn]').click(function(){
     username = $('input[name=username]').val();
     password = $('input[name=pass]').val();
     $.post("/enterprise/login", {username: username, password: password}, function (data){
       if ("session" in data){
         Cookies.set('Auth',data["session"]);
         window.location.replace("/panel/");
       } else {
         $("#success-content").fadeOut(1, function(){
          $("#success-content").html("<br/>User/password combination does not exist.");
          $("#success-content").fadeIn();
        }); 
       } 
     });
   });
 }); 
</script>
<body>
<div id='menu'>
<%= get_menu.html_safe %>
</div>
<div id = 'container'>
